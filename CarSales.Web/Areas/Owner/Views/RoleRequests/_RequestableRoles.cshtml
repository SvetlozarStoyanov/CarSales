@model IEnumerable<RoleListModel>
@if (Model.Count() == 0)
{
    <h2 class="text-center">No roles can be requested. You may have to leave current role to request others!</h2>
}
else
{
    <h2 class="text-center">Roles which can be requested</h2>

    <table class=" table table-bordered  table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td width="30%">
                        @role.Name
                    </td>
                    <td width="50%">
                        @role.Description
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            @if (role.Name != "Owner" && role.Name != "Administrator")
                            {
                                <a asp-area="Owner" asp-controller="RoleRequests" asp-action="RequestRole" asp-route-roleName="@role.Name" class="btn btn-primary mx-2">
                                    <i class="bi bi-arrow-right-circle-fill"></i>
                                    Request Role
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}