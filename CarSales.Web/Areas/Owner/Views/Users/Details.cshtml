@model UserViewModel
@{
    ViewData["Title"] = $"{Model.UserName}";
    string defaultImage = $"/img/Profile/{Model.Gender}Profile.png";
    string profilePicture = Model.ImageUrl != null ? Model.ImageUrl : defaultImage;
}

<section class="text-white">
    <article class="">
        <h2 class="text-center mt-3 mb-3">
            @Model.UserName
        </h2>
        <div class="mt-3 mb-3 d-flex">
            <img class="border border-info border-5 rounded-circle basic-transition" id="profilePicture"
                 style="height:250px;width:250px;object-fit:cover"
                 src="@profilePicture" alt="profilePicture" />
            <div>
                <a class="btn btn-lg btn-info" asp-area="Owner" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">
                    Edit profile
                    <i class="bi bi-gear-wide"></i>
                </a>
            </div>
        </div>
        @if (ViewBag.CanEditProfile)
        {
            <div class="d-flex flex-column justify-content-between p-3 bg-dark bg-opacity-100 border border-4 border-white rounded-4 mt-3 mb-3">
                <h4 class="">
                    Full name: @Model.FirstName @Model.LastName
                </h4>
                <h4 class="">
                    Email: @Model.Email
                </h4>
                @if (Model.PhoneNumber != null)
                {
                    <h4 class="">
                        Phone Number: @Model.PhoneNumber
                    </h4>
                }
                else
                {
                    <h4 class="">
                        Phone Number: Not Available
                    </h4>
                }
                <h4 class="">
                    Gender: @Model.Gender
                </h4>
            </div>
        }
    </article>
</section>
