@model UserViewModel
@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
    string defaultImage = $"/img/Profile/{Model.Gender}Profile.png";
    string profilePicture = Model.ImageUrl != null ? Model.ImageUrl : defaultImage;
}
<input value="@defaultImage" id="defaultProfilePicture" hidden/>
<section class="text-white d-flex flex-lg-row flex-column justify-content-lg-around justify-content-between">
    @*<div class=" border border-info border-3 rounded-circle ">*@
    <div class="flex-shrink-1 align-self-center basic-transition mt-3 mb-3">
        <img class="border border-info border-5 rounded-circle basic-transition" id="profilePicture" style="height:250px;width:250px;object-fit:cover" src="@profilePicture" alt="profilePicture" />
    </div>
    @*</div>*@
    <form asp-area="Owner" asp-controller="Users" asp-action="Edit" asp-route-model="@Model.UserEditModel" method="post">
        <input asp-for="@Model.UserEditModel.Id" hidden />
        <article class="d-flex flex-column justify-content-between flex-grow-1 bg-secondary bg-opacity-50 p-3 border border-5 border-white rounded-4">
            <div class="d-flex flex-row justify-content-between gap-5 mt-1 mb-1">
                <div class="form-group">
                    <label asp-for="@Model.UserEditModel.FirstName" class="form-label">First name</label>
                    <input asp-for="@Model.UserEditModel.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.UserEditModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.UserEditModel.LastName" class="form-label">Last name</label>
                    <input asp-for="@Model.UserEditModel.LastName" class="form-control" />
                    <span asp-validation-for="@Model.UserEditModel.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-between gap-5 mt-1 mb-1">
                <div class="form-group">
                    <label asp-for="@Model.UserEditModel.UserName" class="form-label">Username</label>
                    <input asp-for="@Model.UserEditModel.UserName" class="form-control" />
                    <span asp-validation-for="@Model.UserEditModel.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.UserEditModel.Email" class="form-label">Email</label>
                    <input asp-for="@Model.UserEditModel.Email" class="form-control" />
                    <span asp-validation-for="@Model.UserEditModel.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-3 mb-3 order-md-0">
                <label asp-for="@Model.UserEditModel.ImageUrl" class="form-label">Image Url</label>
                <input asp-for="@Model.UserEditModel.ImageUrl" id="imageUrl" class="form-control" />
                <span asp-validation-for="@Model.UserEditModel.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="@Model.UserEditModel.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="@Model.UserEditModel.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.UserEditModel.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label asp-for="@Model.UserEditModel.Credits" class="form-label">Credits</label>
                <input asp-for="@Model.UserEditModel.Credits" class="form-control" disabled />
                <span asp-validation-for="@Model.UserEditModel.Credits" class="text-danger"></span>
            </div>
            <div class="text-center mt-2 mb-2 w-100">
                <button class="btn btn-success w-100" type="submit" disabled>Save changes</button>
            </div>
        </article>
    </form>
</section>

<script src="~/js/Users/myAccount.js"></script>