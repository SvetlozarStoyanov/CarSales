@model UserViewModel
@{
    ViewData["Title"] = "My Account";
    string profilePicture = Model.ImageUrl != null ? Model.ImageUrl : $"/img/Profile/{Model.Gender}Profile.png";
}

<section class="d-flex flex-row text-white justify-content-between">
    <article class="d-flex flex-column">
        <h3 class="text-center mt-3 mb-3">
            @Model.FirstName @Model.LastName
        </h3>
        <form asp-area="Owner" asp-controller="Users" asp-action="Edit" asp-route-model="@Model.UserEditModel" method="post">
            <input asp-for="@Model.UserEditModel.Id" hidden />
            <div class="mt-3 mb-3">
                <div class="d-flex align-items-center">
                    <div class="form-group">
                        <label asp-for="@Model.UserEditModel.UserName" class="form-label">Username</label>
                        <div class="d-flex align-items-center">
                            <input asp-for="@Model.UserEditModel.UserName" class="form-control" disabled />
                            <button type="button" class="btn btn-info text-nowrap">
                                Change
                            </button>
                            <button type="submit" class="btn btn-success text-nowrap d-none">
                                Save
                            </button>
                        </div>
                        <span asp-validation-for="@Model.UserEditModel.UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mt-3 mb-3">
                <div class="d-flex">
                    <div class="form-group">
                        <label asp-for="@Model.UserEditModel.PhoneNumber" class="form-label">Phone Number</label>
                        <div class="d-flex align-items-center">
                            <input asp-for="@Model.UserEditModel.PhoneNumber" class="form-control" disabled />
                            <button type="button" class="btn btn-info text-nowrap">
                                Change
                            </button>
                            <button type="submit" class="btn btn-success text-nowrap d-none">
                                Save
                            </button>
                        </div>
                        <span asp-validation-for="@Model.UserEditModel.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <h4 class="text-center mt-3 mb-3">
                @Model.Credits
            </h4>
        </form>
    </article>
    <div class="border border-info border-3 rounded-circle mh-25">
        <img class="w-100 h-100 img-fluid rounded-circle" src="@profilePicture" alt="profilePicture" />
    </div>
</section>

<script src="~/js/Users/myAccount.js"></script>