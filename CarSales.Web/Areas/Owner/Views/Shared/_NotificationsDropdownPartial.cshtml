@model IEnumerable<NotificationListModel>


@if (Model.Any())
{
    @foreach (var notification in Model)
    {
        <li>
            <partial name="_NotificationDropdownPartial" model="notification" />
        </li>
    }
    <li>
        <a class="dropdown-item text-center fw-bold mt-3 mb-3" asp-area="Owner" asp-controller="Notifications" asp-action="Index">
            All Notifications
        </a>
    </li>

}
else
{
    <h5 class="text-center mt-3 mb-3">No notifications!</h5>
}
