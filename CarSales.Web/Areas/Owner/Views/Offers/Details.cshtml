@model OfferViewModel
@{
    ViewData["Title"] = $"{Model.Vehicle.Name}/{Model.Price}";
}
<section class="text-center">
    <h3 class="mt-3 mb-3">
        Offered price: @Model.Price
    </h3>
    <p class="mt-3 mb-3">
        @Model.Description
    </p>
    @if (Model.Status == OfferStatus.Accepted)
    {
        <div class="mt-3 mb-3">
            Bought from: @Model.SalesmanName
        </div>
    }
    <div class="mt-3 mb-3">
        Status: @Model.Status
    </div>
    <div class="d-flex mt-3 mb-3 justify-content-center p-2">
        <partial name="_VehicleMinPartial" model="@Model.Vehicle" />
    </div>

    <div class="text-center mt-3 mb-3">
        @if (Model.Status == OfferStatus.Pending)
        {
            <a class="btn btn-lg btn-info mx-2" asp-area="Owner" asp-controller="Offers" asp-action="Edit" asp-route-id="@Model.Id">
                Edit
            </a>
            <a class="btn btn-lg btn-danger mx-2" asp-area="Owner" asp-controller="Offers" asp-action="Cancel" asp-route-id="@Model.Id">
                Cancel
            </a>
        }
    </div>
</section>

