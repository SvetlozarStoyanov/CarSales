@model IEnumerable<VehicleListModel>
@{
    ViewData["Title"] = "My Imported Vehicles";
}
@if (Model.Count() == 0)
{
    <h1 class="text-center">You are have not imported any vehicles!</h1>
}
else
{
    <h1 class="text-center">@ViewData["Title"]</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    Type
                </td>
                <td>
                    Rating
                </td>
                <td>
                    Price
                </td>
                <td>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>
                        @vehicle.Name
                    </td>
                    <td>
                        @vehicle.VehicleType
                    </td>
                    <td>
                        @vehicle.VehicleRating
                    </td>
                    <td>
                        @vehicle.Price
                    </td>
                    <td>
                        <a class="btn btn-primary m-3" asp-area="Importer" asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id">
                            Details
                        </a>
                        <a class="btn btn-secondary m-3" asp-area="Importer" asp-controller="Vehicles" asp-action="Edit" asp-route-id="@vehicle.Id">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}