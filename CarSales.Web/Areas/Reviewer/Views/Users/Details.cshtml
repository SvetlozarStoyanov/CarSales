@model UserViewModel
@{
    ViewData["Title"] = $"{Model.UserName}";
}

<section class="text-white d-flex justify-content-center">
    <article class="d-flex flex-column ">

        <div class="mt-3 mb-3 d-flex flex-lg-row flex-column justify-content-between p-5 bg-dark bg-opacity-25 border border-4 rounded-5 border-white">
            <div class="align-self-center text-center mx-3 h-100">
                <img class="border border-primary border-5 rounded-4 basic-transition" id="profilePicture"
                     style="height:250px;width:250px;object-fit:cover"
                     src="@Model.ProfilePicture" alt="profilePicture" />
                @if (ViewBag.CanEditProfile)
                {
                    <div class="m-3 text-center">
                        <a class="btn btn-lg btn-primary w-100" asp-area="Reviewer" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">
                            Edit profile
                            <i class="bi bi-gear-wide"></i>
                        </a>
                    </div>
                }
            </div>
            <div class="d-flex flex-column mx-5 justify-content-between gap-4 p-2">
                <h2 class="text-center ">
                    @Model.UserName
                </h2>
                <div class="d-flex flex-column justify-content-between">
                    <h4>
                        Full name: @Model.FirstName @Model.LastName
                    </h4>
                    <h4>
                        Gender: @Model.Gender
                    </h4>
                </div>
                <div class="d-flex flex-column justify-content-between">
                    <h3>Contacts</h3>
                    <h4>
                        Email: @Model.Email
                    </h4>
                    @if (Model.PhoneNumber != null)
                    {
                        <h4>
                            Phone Number: @Model.PhoneNumber
                        </h4>
                    }
                    else
                    {
                        <h4>
                            Phone Number: Not Available
                        </h4>
                    }
                </div>
            </div>

        </div>
    </article>
</section>
