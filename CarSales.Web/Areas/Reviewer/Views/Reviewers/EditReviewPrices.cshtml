@model ReviewerPriceEditModel
@{
    ViewData["Title"] = "Edit Review Prices";
}

<section class="row">
    <h1 class="text-center mt-3 mb-3">
        @ViewData["Title"]
    </h1>
    <div class="text-center mt-2 mb-2 d-flex justify-content-center">
        <h4 class="w-25 rounded text-center text-wrap bg-danger bg-opacity-50">
            Changes will not apply for already accepted reviews!
        </h4>
    </div>
    <div class="text-center col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <article>
            <form asp-area="Reviewer" asp-controller="Reviewers" asp-action="EditReviewPrices" method="post">
                <input asp-for="@Model.Id" hidden />
                <div class="form-group mt-3 mb-3">
                    <label asp-for="@Model.ShortReviewPrice" class="form-label">Short Review Price</label>
                    <input asp-for="@Model.ShortReviewPrice" class="form-control" type="number" />
                    <span asp-validation-for="@Model.ShortReviewPrice" class="small text-danger"></span>
                </div>
                <div class="form-group mt-3 mb-3">
                    <label asp-for="@Model.StandartReviewPrice" class="form-label">Short Review Price</label>
                    <input asp-for="@Model.StandartReviewPrice" class="form-control" type="number" />
                    <span asp-validation-for="@Model.StandartReviewPrice" class="small text-danger"></span>
                </div>
                <div class="form-group mt-3 mb-3">
                    <label asp-for="@Model.PremiumReviewPrice" class="form-label">Short Review Price</label>
                    <input asp-for="@Model.PremiumReviewPrice" class="form-control" type="number" />
                    <span asp-validation-for="@Model.PremiumReviewPrice" class="small text-danger"></span>
                </div>
                <div class="text-center mt-3 mb-3">
                    <button class="btn btn-lg btn-primary">
                        Save
                    </button>
                </div>
            </form>
        </article>
    </div>
</section>