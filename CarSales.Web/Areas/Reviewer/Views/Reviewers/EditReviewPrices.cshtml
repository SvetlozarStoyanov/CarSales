@model ReviewerPriceEditModel
@{
    ViewData["Title"] = "Edit Review Prices";
}

<section class="d-flex flex-column justify-content-center align-items-center">
    <h3 class="text-center mt-3 mb-3">
        @ViewData["Title"]
    </h3>
    <article class="d-flex flex-column justify-content-center align-items-center gap-2 border border-3 border-white rounded-5">
        <form class="mt-2 d-flex flex-column gap-2" asp-area="Reviewer" asp-controller="Reviewers" asp-action="EditReviewPrices" method="post">
            <input asp-for="@Model.Id" hidden readonly/>
            <div class="form-group">
                <label asp-for="@Model.ShortReviewPrice" class="form-label text-white">Short Review Price</label>
                <input asp-for="@Model.ShortReviewPrice" class="form-control" type="number" />
                <span asp-validation-for="@Model.ShortReviewPrice" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StandartReviewPrice" class="form-label text-white">Standart Review Price</label>
                <input asp-for="@Model.StandartReviewPrice" class="form-control" type="number" />
                <span asp-validation-for="@Model.StandartReviewPrice" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PremiumReviewPrice" class="form-label text-white">Premium Review Price</label>
                <input asp-for="@Model.PremiumReviewPrice" class="form-control" type="number" />
                <span asp-validation-for="@Model.PremiumReviewPrice" class="small text-danger"></span>
            </div>
            <div class="text-center mt-3">
                <button class="btn btn-lg btn-primary">
                    Save
                </button>
            </div>
        </form>
        <div class="m-2 d-flex flex-column align-items-center justify-content-center ">
            <h5 class="p-4 text-center text-wrap bg-danger bg-opacity-50 border border-3 border-white rounded-5">
                Changes will not apply for already accepted reviews!
            </h5>
        </div>
    </article>
</section>