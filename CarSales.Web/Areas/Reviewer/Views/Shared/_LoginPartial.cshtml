@using CarSales.Infrastructure.Data.Entities;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    var user = await UserManager.GetUserAsync(User);

    string defaultImage = $"/img/Profile/{user.Gender}Profile.png";
    string profilePicture = user.ImageUrl != null ? user.ImageUrl : defaultImage;
}
<ul class="navbar-nav me-5 d-flex align-items-md-center align-items-start">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link active" disabled><span id="userCredits">@user.Credits</span> credits</a>
        </li>
        <li class="dropdown">
            <a class="d-flex align-items-center m-1" data-bs-auto-close="outside" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <img class="custom-avatar-img border border-3 border-black rounded-circle" src="@profilePicture" />
            </a>
            <ul class="dropdown-menu">
                <li class="dropstart">
                    <a class="nav-link active" data-bs-toggle="dropdown" href="#">
                        <span class="d-none d-md-inline">
                            <i class="bi bi-caret-left-fill"></i>
                        </span>
                        My Profile
                        <span class="d-md-none d-sm-inline">
                            <i class="bi bi-caret-down-fill"></i>
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-submenu">
                        <li>
                            <a class="nav-link active" asp-area="Reviewer" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Details</a>
                        </li>
                        <li>
                            <a class="nav-link active" asp-area="Reviewer" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        </li>
                        <li>
                            <a class="nav-link active" asp-area="Reviewer" asp-controller="Reviewers" asp-action="EditReviewPrices">Edit Review Prices</a>
                        </li>
                        <li>
                            <a class="nav-link active" asp-area="Reviewer" asp-controller="RoleRequests" asp-action="Index">Request role</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <div class="dropdown-divider"></div>
                </li>
                <li>
                    <a class="nav-link active" asp-area="Reviewer" asp-controller="Reviews" asp-action="Mine">My reviews</a>
                </li>
                <li>
                    <div class="dropdown-divider"></div>
                </li>
                <li>
                    <a class="nav-link active" asp-area="Reviewer" asp-controller="Vehicles" asp-action="Mine">My Vehicles</a>
                </li>
                <li>
                    <div class="dropdown-divider"></div>
                </li>
                <li>
                    <a class="nav-link active" asp-area="Reviewer" asp-controller="Offers" asp-action="Outgoing">My Offers</a>
                </li>
                <li>
                    <div class="dropdown-divider"></div>
                </li>
                <li>
                    <a class="nav-link active" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
        </li>
    }
</ul>
