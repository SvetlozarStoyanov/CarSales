@model VehicleMinModel

@{
    string imageUrl = Model.ImageUrl ?? $"/img/VehicleTypes/{Model.VehicleType}.png";
}

<article class="d-flex flex-column justify-content-between gap-1 custom-border-white-blue basic-transition text-white">
    <div class="w-100 mh-50 bg-white bg-opacity-25" style="height:250px;">
        <img class="img-fluid w-100 mh-100" src="@imageUrl" alt="vehicleImage" />
    </div>
    <div class="flex-grow-1 text-center bg-dark bg-opacity-10">
        <h5 class="mt-1 mb-1">
            @Model.Name
        </h5>
        @if (Model.SalesmanId != null)
        {
            <p>
                Sold by: @Model.SalesmanName
            </p>
        }
        else if (Model.ImporterId != null)
        {
            <p>
                Imported by: @Model.ImporterName
            </p>
        }
        <div>
            @if (Model.VehicleRating > VehicleRating.NotRated)
            {
                var ratingAsInt = (int)Model.VehicleRating;
                for (int i = 0; i < ratingAsInt; i++)
                {
                    <span class="m-1 p-1">
                        <i style="font-size:15px;color:goldenrod" class="bi bi-star-fill"></i>
                    </span>
                }
                for (int i = 0; i < 5 - ratingAsInt; i++)
                {
                    <span class="m-1 p-1">
                        <i style="font-size:15px;color:goldenrod" class="bi bi-star"></i>
                    </span>
                }
            }
            else
            {
                @for (int i = 0; i < 5; i++)
                {
                    <span class="m-2 p-2">
                        <i style="font-size:15px;" class="bi bi-star opacity-50"></i>
                    </span>
                }
            }
        </div>
        <div class="mt-2 mb-2">
            @Model.Price credits
        </div>
        <div class="mt-2 mb-2">
            <a class="btn btn-info" asp-area="Reviewer" asp-controller="Vehicles" asp-action="Details" asp-route-id="@Model.Id">
                Details
            </a>
        </div>
    </div>
</article>