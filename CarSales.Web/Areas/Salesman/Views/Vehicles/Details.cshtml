@model VehicleViewModel
@{
    ViewData["Title"] = $"{Model.Brand} {Model.Model}";
    string imageUrl = Model.ImageUrl ?? $"/img/VehicleTypes/{Model.VehicleType}.png";
}

<link href="~/css/vehicleDetails.css" rel="stylesheet" type="text/css" />

<input id="availableCredits" value="@ViewBag.AvailableCredits" hidden />
<input id="price" value="@Model.Price" hidden />

<h1 class="text-center mt-3 mb-3">
    @Model.Brand @Model.Model
</h1>
<section class="d-flex p-5">
    <article class="mx-2">
        <div class="vehicle-image-container">
            <img style="width:500px;height:400px" class="border border-3 border-success" src="@imageUrl" />
        </div>
    </article>
    <article class="mx-5">

        <ul class="mt-3 mb-3">
            <li>
                <h5>
                    @Model.Description
                </h5>
            </li>
            <li>
                <h5>
                    Produced: @Model.YearProduced
                </h5>
            </li>
            <li>
                <h5>
                    Kilometers: @Model.KilometersDriven
                </h5>
            </li>
            <li>
                <h5>
                    Top speed: @Model.TopSpeed km/h
                </h5>
            </li>
        </ul>
        <div class="text-center">
            @if (Model.VehicleRating > VehicleRating.NotRated)
            {
                var ratingAsInt = (int)Model.VehicleRating;
                for (int i = 0; i < ratingAsInt; i++)
                {
                    <span class="m-2 p-2">
                        <i style="font-size:45px;color:goldenrod" class="bi bi-star-fill"></i>
                    </span>
                }
                for (int i = 0; i < 5 - ratingAsInt; i++)
                {
                    <span class="m-2 p-2">
                        <i style="font-size:45px;color:goldenrod" class="bi bi-star"></i>
                    </span>
                }
            }
            else
            {
                @for (int i = 0; i < 5; i++)
                {
                    <span class="m-2 p-2 ">
                        <i style="font-size:45px;" class="bi bi-star opacity-50 text-white">
                        </i>
                    </span>
                }
            }
        </div>
        <div class="mt-3 mb-3 text-center">
            @if (Model.SalesmanId != null)
            {
                <h2 class="mt-3 mb-3">Seller: @Model.SalesmanName</h2>
                <h3 class="mt-3 mb-3">@Model.Price credits</h3>
            }
            else if (Model.OwnerId != null)
            {
                <h2 class="mt-3 mb-3">Owner: @Model.OwnerName</h2>
            }
            else if (Model.ImporterId != null)
            {
                <h2 class="mt-3 mb-3">Importer: @Model.ImporterName</h2>
                <h3 class="mt-3 mb-3">@Model.Price credits</h3>
            }
        </div>
    </article>
</section>

@if (Model.OwnerUserId == User.Id() && Model.OwnerId != null)
{
    <div class="text-center mt-3 mb-3">
        <a class="btn btn-lg btn-success" asp-area="Salesman" asp-controller="Vehicles" asp-action="Sell" asp-route-id="@Model.Id">
            Sell
        </a>
    </div>
}
else if (Model.SalesmanUserId != null && Model.SalesmanUserId != User.Id())
{
    <div class="text-center mt-3 mb-3">
        <a id="buyBtn" class="btn btn-lg btn-success" asp-area="Salesman" asp-controller="Vehicles" asp-action="BuyFromSalesman" asp-route-id="@Model.Id">
            Buy
        </a>
        @if (ViewBag.CanMakeOffer)
        {
            <div class="text-center mt-3 mb-3">
                <a class="btn btn-lg btn-secondary" asp-area="Salesman" asp-controller="Offers" asp-action="Create" asp-route-vehicleId="@Model.Id">
                    Make an offer
                </a>
            </div>
        }
    </div>
}
else if (Model.ImporterUserId != null && Model.ImporterUserId != User.Id())
{
    <div class="text-center mt-3 mb-3">
        <a class="btn btn-lg btn-success" id="buyBtn" asp-area="Salesman" asp-controller="Vehicles" asp-action="BuyFromImporter" asp-route-id="@Model.Id">
            Buy
        </a>
    </div>
}
else
{
    <div class="text-center mt-3 mb-3">
        <a class="btn btn-lg btn-success" asp-area="Salesman" asp-controller="Reviewers" asp-action="Index" asp-route-vehicleId="@Model.Id">
            Order review
        </a>
    </div>
}
<script src="~/js/Vehicles/canBuyVehicle.js"></script>