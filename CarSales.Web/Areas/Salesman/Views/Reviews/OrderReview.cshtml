@model ReviewOrderModel
@{
    ViewData["Title"] = $"Choose review plan.";
}
<h1 class="text-center mt-3 mb-3">
    @ViewData["Title"]
</h1>
<form asp-area="Salesman" asp-controller="Reviews" asp-action="OrderReview" method="post">
    <input value="@Model.VehicleId" hidden />
    <input value="@Model.Price" id="selectedPrice" hidden />
    <input value="@Model.ReviewType" id="selectedReviewType" hidden />

    <section class="container d-flex justify-content-evenly">
        @foreach (var kvp in Model.ReviewTypesAndPrices)
        {
            <article class="bg-info bg-opacity-50" id="@kvp.Key.ToString()">
                <h4 class="text-center mt-2 mb-2">
                    @kvp.Key
                </h4>
                <h5>
                    Includes
                </h5>
                <ul class="list mt-2 mb-2">
                    <li>
                        <h6>Overview</h6>
                    </li>
                    <li>
                        <h6>Performance</h6>
                    </li>
                </ul>
                <h3 class="text-center mt-2 mb-2">
                    @kvp.Value
                </h3>
            </article>
        }

    </section>
    <div class="text-center mt-3 mb-3">
        <button class="btn btn-lg btn-success">Confirm</button>
    </div>
</form>