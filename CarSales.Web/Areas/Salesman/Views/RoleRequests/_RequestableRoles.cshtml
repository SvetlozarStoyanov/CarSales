@model IEnumerable<RoleListModel>
@if (Model.Count() == 0)
{
    <h2 class="text-center text-white mt-3 mb-3">No roles can be requested. You may have to leave current role to request others!</h2>
}
else
{
    <h2 class="text-center text-white mt-3 mb-3">Roles which can be requested</h2>
    <div class="table-responsive">
        <table class="table table-dark table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            @role.Name
                        </td>
                        <td>
                            @role.Description
                        </td>
                        <td>
                            <div class="d-flex justify-content-center w-100">
                                @if (role.Name != "Owner" && role.Name != "Administrator")
                                {
                                    <a asp-area="Salesman" asp-controller="RoleRequests" asp-action="RequestRole" asp-route-roleName="@role.Name" class="btn btn-primary mx-2">
                                        <i class="bi bi-arrow-right-circle-fill"></i>
                                        <span class="d-lg-inline d-none">Request Role</span>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}