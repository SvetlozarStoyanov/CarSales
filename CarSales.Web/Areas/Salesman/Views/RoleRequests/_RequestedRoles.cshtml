@model IEnumerable<RoleListModel>
@{
    int i = 0;
}

<h2 class="text-center text-white mt-3 mb-3">Requested Roles</h2>
<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.Name
                    </td>
                    <td>
                        @role.Description
                    </td>
                    <td>
                        <div class="d-flex justify-content-center w-100">
                            @if (role.Name != "Owner" && role.Name != "Administrator")
                            {
                                <a class="btn btn-danger mx-2" asp-area="Salesman" asp-controller="RoleRequests" asp-action="DeleteRoleRequest" asp-route-id="@ViewBag.RequestedRoleIds[i++]">
                                    <i class="bi bi-trash"></i>
                                    <span class="d-lg-inline d-none">Cancel Request</span>
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>