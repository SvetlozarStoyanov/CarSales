@model IEnumerable<RoleListModel>
<h2 class="text-center text-white mt-3 mb-3">Current Roles</h2>
<div class="table-responsive">
    <table class="table table-dark table-hover table-bordered border-white table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.Name
                    </td>
                    <td>
                        @role.Description
                    </td>
                    <td>
                        <div class="d-flex justify-content-center w-100">
                            @if (role.Name != "Owner")
                            {
                                <a class="btn btn-danger mx-2" asp-area="Salesman" asp-controller="RoleRequests" asp-action="LeaveRole" asp-route-roleName="@role.Name">
                                    <i class="bi bi-x-octagon-fill"></i>
                                    <span class="d-lg-inline d-none">Leave Role</span>
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>