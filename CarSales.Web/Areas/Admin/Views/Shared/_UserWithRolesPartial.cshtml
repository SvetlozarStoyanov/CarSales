@model UserWithRolesModel
@{
    string defaultImage = $"/img/Profile/{Model.Gender}Profile.png";
    string profilePicture = Model.ImageUrl != null ? Model.ImageUrl : defaultImage;
}

<section class="text-white d-flex justify-content-center">
    <article class="d-flex flex-column ">

        <div class="mt-3 mb-3 d-flex flex-lg-row flex-column justify-content-between p-5 bg-dark bg-opacity-100 border border-4 rounded-5 border-white">
            <div class="align-self-center text-center mx-3 h-100">
                <img class="border border-info border-5 rounded-4 basic-transition" id="profilePicture"
                     style="height:250px;width:250px;object-fit:cover"
                     src="@profilePicture" alt="profilePicture" />
            </div>
            <div class="d-flex flex-column mx-5 justify-content-between gap-4 p-2">
                <h2 class="text-center ">
                    @Model.UserName
                </h2>
                <div class="d-flex flex-column justify-content-between">
                    <h4>
                        Full name: @Model.FirstName @Model.LastName
                    </h4>
                    <h4>
                        Email: @Model.Email
                    </h4>
                </div>
                <div class="d-flex flex-column justify-content-between">
                    <h3>Roles</h3>
                    @foreach (var role in Model.Roles)
                    {
                        <h5>@role</h5>
                    }
                </div>
            </div>
        </div>
    </article>
</section>