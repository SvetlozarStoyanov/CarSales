@model IEnumerable<RoleRequestListModel>
<table class=" table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Requested Role
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roleRequest in Model)
        {
            <tr>
                <td width="50%">
                    @roleRequest.UserName
                </td>
                <td width="30%">
                    @roleRequest.RoleName
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-area="Admin" asp-controller="RoleRequests" asp-action="Details" asp-route-id="@roleRequest.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-info-square-fill"></i>
                            Details
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
