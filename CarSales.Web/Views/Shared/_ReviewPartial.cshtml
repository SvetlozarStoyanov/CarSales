@model ReviewListModel
@{
    string imageUrl = Model.VehicleImageUrl ?? $"/img/VehicleTypes/{Model.VehicleType}.png";
}
<article class="col mt-3 mb-3 text-break">
    <div class="d-flex justify-content-evenly container review-container w-100 h-100 border border-3 border-dark rounded-4 basic-transition p-0">

        <div class="text-center w-50 bg-dark bg-opacity-25">
            <img class="w-100 h-100" src="@imageUrl" alt="vehicleImg" />
        </div>
        <div class="d-flex flex-column justify-content-evenly w-50 bg-dark bg-opacity-10 ">
            <h3 class="text-center mt-2 mb-2">
                @Model.VehicleName
            </h3>
            <div class="mt-2 mb-2 flex-grow-1 container">
                <h6 class="text-center text-wrap">
                    @Model.Title
                </h6>
            </div>
            <div class="text-center mt-2 mb-2">
                <a class="btn btn-primary" asp-area="" asp-controller="Reviews" asp-action="Details" asp-route-id="@Model.Id">Read More</a>
            </div>
        </div>
    </div>

</article>
