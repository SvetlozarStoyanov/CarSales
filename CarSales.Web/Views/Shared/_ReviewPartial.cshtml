@model ReviewListModel
@{
    string imageUrl = Model.VehicleImageUrl ?? $"/img/VehicleTypes/{Model.VehicleType}.png";
}
<article class="col-md-4 mt-3">
    <div class="card m-4 review-container">
        <div class="text-center bg-dark bg-opacity-25 border border-2 border-bottom-0 border-dark" style="height:250px;">
            <img class="card-img-top h-100" src="@imageUrl" alt="vehicleImg" />
        </div>
        <div class="d-flex flex-column card-body bg-dark bg-opacity-10 border border-2 border-dark  justify-content-evenly">
            <h2 class="text-center mt-2 mb-2">
                @Model.VehicleName
            </h2>

            <div class="flex-grow-1 text-center mt-2 mb-2">
                <p class="">
                    @Model.Title
                </p>
            </div>
            <div class="text-center mt-2 mb-2">
                <a class="btn btn-primary" asp-area="" asp-controller="Reviews" asp-action="Details" asp-route-id="@Model.Id">Read More</a>
            </div>
        </div>
    </div>
</article>
