@model UserLoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="d-flex justify-content-center">
    <article class="d-flex flex-column justify-content-between bg-secondary bg-opacity-10 py-3 px-5 border border-4 border-dark rounded rounded-5">
        <h1 class="text-center mt-3 mb-3">@ViewData["Title"]</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="johndoe" />
                <label asp-for="@Model.UserName" class="form-label">Username</label>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="@Model.Password" class="form-label">Password</label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
        </form>
        <div class="text-center mt-3 mb-3">
            <h5>
                Don't have an account?
                <a class="fw-bold text-decoration-none" asp-area="" asp-controller="Users" asp-action="Register">
                    Register
                </a>
            </h5>
        </div>
    </article>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
