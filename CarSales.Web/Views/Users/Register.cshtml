@model UserRegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mt-3 mb-3">@ViewData["Title"]</h1>

<section class="d-flex justify-content-center">
    <form id="registerForm" method="post">
        <article class="d-flex flex-column justify-content-between">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="d-flex flex-row justify-content-between gap-5 mt-3 mb-3">
                <div class="form-floating">
                    <input asp-for="@Model.FirstName" class="form-control" required autocomplete="john" aria-required="true" placeholder="john" />
                    <label asp-for="@Model.FirstName" class="form-label">First name</label>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.LastName" class="form-control" required autocomplete="doe" aria-required="true" placeholder="doe" />
                    <label asp-for="@Model.LastName" class="form-label">Last name</label>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-between gap-5 mt-3 mb-3">
                <div class="form-floating">
                    <input asp-for="@Model.UserName" class="form-control" required autocomplete="johndoe" aria-required="true" placeholder="johndoe" />
                    <label asp-for="@Model.UserName" class="form-label">Username</label>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input type="email" asp-for="@Model.Email" class="form-control" required autocomplete="johndoe@mail.com" aria-required="true" placeholder="johndoe@mail.com" />
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="@Model.Password">Password</label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Gender" class="form-label">Gender</label>
                <select asp-for="Gender" id="gender" class="form-select">
                    @foreach (var gender in Model.Genders)
                    {
                        <option value="@gender">@gender</option>
                    }
                </select>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number (optional)</label>
                <div class="form-floating">
                    <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Format: 123-456-7890" asp-for="@Model.PhoneNumber" class="form-control" />
                    <label class="form-label">Format: 123-456-7890</label>
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3 mb-3">
                <img class="border border-info border-5 rounded-4 basic-transition" id="profilePicture"
                     style="height:250px;width:250px;object-fit:cover"
                     alt="profilePicture" />
                <h5 class="m-0 text-center d-flex flex-column align-items-center justify-content-center border border-info border-5 basic-transition d-none text-danger"
                    id="imageErrorHeader"
                    style="height:250px;width:250px;object-fit:none">
                    <span>Image Url does not exist!</span>
                </h5>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.ImageUrl" id="imageUrl" class="form-control" autocomplete="image-url" placeholder="image-url" />
                <label asp-for="@Model.ImageUrl">Image URL (optional)</label>
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <div class="text-center mt-3 mb-3">
                <h5>
                    Already have an account?
                    <a class="fw-bold text-decoration-none" asp-area="" asp-controller="Users" asp-action="Login">
                        Login
                    </a>
                </h5>
            </div>
        </article>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="~/js/Users/register.js"></script>