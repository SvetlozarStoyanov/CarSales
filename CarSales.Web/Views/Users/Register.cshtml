@model UserRegisterModel
@{
    ViewData["Title"] = "Registration";
}


<section class="d-flex justify-content-center">
    <article class="d-flex flex-column justify-content-between bg-secondary bg-opacity-10 py-3 px-5 border border-4 border-dark rounded rounded-5">
        <h1 class="text-center mt-1 mb-3">@ViewData["Title"]</h1>
        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="d-flex flex-row justify-content-between gap-5 mt-2 mb-2">
                <div class="form-floating">
                    <input asp-for="@Model.FirstName" class="form-control" required autocomplete="john" aria-required="true" placeholder="john" />
                    <label asp-for="@Model.FirstName" class="form-label">First name</label>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="@Model.LastName" class="form-control" required autocomplete="doe" aria-required="true" placeholder="doe" />
                    <label asp-for="@Model.LastName" class="form-label">Last name</label>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-between gap-5 mt-2 mb-2">
                <div class="form-floating">
                    <input asp-for="@Model.UserName" class="form-control" required autocomplete="johndoe" aria-required="true" placeholder="johndoe" />
                    <label asp-for="@Model.UserName" class="form-label">Username</label>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input type="email" asp-for="@Model.Email" class="form-control" required autocomplete="johndoe@mail.com" aria-required="true" placeholder="johndoe@mail.com" />
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="@Model.Password">Password</label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex flex-row justify-content-between gap-5 mt-2 mb-2">
                <input asp-for="@Model.Gender" id="genderHiddenInput" hidden />
                <div class="form-group d-flex flex-column">
                    <h5 class="form-label">Gender</h5>
                    @foreach (var gender in Model.Genders)
                    {
                        <div class="form-check ">
                            <input class="form-check-input" name="@gender" type="radio" value="@gender" />
                            <label class="form-check-label">@gender</label>
                            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                        </div>
                    }
                </div>
                <div class="form-group  mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number (optional)</label>
                    <div class="form-floating">
                        <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="Format: 123-456-7890" asp-for="@Model.PhoneNumber" class="form-control" />
                        <label class="form-label">Format: 123-456-7890</label>
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-2 mb-2">
                <img class="border border-dark border-5 rounded-4 basic-transition" id="profilePicture"
                     style="height:200px;width:200px;object-fit:cover"
                     alt="profilePicture" />
                <h5 class="m-0 text-center d-flex flex-column align-items-center justify-content-center border border-dark border-5 basic-transition d-none text-danger"
                    id="imageErrorHeader"
                    style="height:250px;width:250px;object-fit:none">
                    <span>Image Url does not exist!</span>
                </h5>
            </div>
            <div class="form-floating mb-3">
                <input type="url" asp-for="@Model.ImageUrl" id="imageUrl" class="form-control" autocomplete="image-url" placeholder="image-url" />
                <label asp-for="@Model.ImageUrl">Image URL (optional)</label>
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <div class="text-center mt-3 mb-3">
                <h5>
                    Already have an account?
                    <a class="fw-bold text-decoration-none" asp-area="" asp-controller="Users" asp-action="Login">
                        Login
                    </a>
                </h5>
            </div>
        </form>
    </article>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="~/js/Users/register.js"></script>