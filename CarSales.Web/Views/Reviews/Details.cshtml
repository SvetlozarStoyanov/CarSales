@model ReviewViewModel
@{
    ViewData["Title"] = $"{Model.Vehicle.Name} Review ({Model.ReviewerName})";
}

<section class="container">
    <h1 class="text-center mt-3 mb-3">
        @Model.Vehicle.Name
    </h1>
    <div class="mt-3 mb-3">
        <h3 class="text-uppercase">
            Overview
        </h3>
        <p class="fs-5 mt-1 mb-1">
            @Model.Overview
        </p>
    </div>
    <article class="mt-4 mb-4 d-flex flex-lg-row flex-column justify-content-evenly text-break">
        <div class="row row-cols-lg-2 row-cols-1">
            <div class="col d-lg-block d-none w-50" style="max-height:450px">
                <a class="btn w-100 h-100 position-relative p-0 custom-review-image-anchor" asp-controller="Vehicles" asp-action="Details" asp-route-id="@Model.Id">
                    <div class="custom-review-image-background-div w-100 h-100">
                        <h4>
                            Click for more information
                        </h4>
                    </div>
                    <img class="w-100 mh-100 border border-4 border-primary" src="@Model.Vehicle.ImageUrl" alt="vehicleImage" />
                </a>
            </div>
            <div class="col d-lg-none d-flex justify-content-center" style="max-height:250px">
                <a class="btn w-50 h-100 position-relative p-0 custom-review-image-anchor" asp-controller="Vehicles" asp-action="Details" asp-route-id="@Model.Id">
                    <div class="custom-review-image-background-div w-100 h-100">
                        <h4>
                            Click for more information
                        </h4>
                    </div>
                    <img class="w-100 mh-100 border border-4 border-primary" src="@Model.Vehicle.ImageUrl" alt="vehicleImage" />
                </a>
            </div>
            <div class="col d-flex flex-column justify-content-between align-items-center">

                <h4 class="align-self-center text-center text-wrap w-50 fs-5 mt-3 mb-3">
                    @Model.Title
                </h4>
                <div class="text-center text-nowrap mt-3 mb-3">
                    @{
                        var ratingAsInt = (int)Model.Vehicle.VehicleRating;
                        for (int i = 0; i < ratingAsInt; i++)
                        {
                            <span class="m-1 p-1">
                                <i style="color:goldenrod" class="bi bi-star-fill fs-1"></i>
                            </span>
                        }
                        for (int i = 0; i < 5 - ratingAsInt; i++)
                        {
                            <span class="m-1 p-1">
                                <i style="color:goldenrod" class="bi bi-star fs-1"></i>
                            </span>
                        }
                    }
                </div>
                <h4 class="text-center">@Model.Vehicle.Price credits</h4>
            </div>
        </div>

    </article>
    <div class="mt-3 mb-3">
        <h3 class="text-uppercase">
            Performance
        </h3>
        <p class="fs-5 mt-1 mb-1">
            @Model.Performance
        </p>
    </div>
    @if (Model.Interior != null)
    {
        <div class="mt-3 mb-3">
            <h3 class="text-uppercase">
                Interior
            </h3>
            <p class="fs-5 mt-1 mb-1">
                @Model.Interior
            </p>
        </div>
    }
    @if (Model.Longevity != null)
    {
        <div class="mt-3 mb-3">
            <h3 class="text-uppercase">
                Longevity
            </h3>
            <p class="fs-5 mt-1 mb-1">
                @Model.Longevity
            </p>
        </div>
    }
    @if (Model.Features != null)
    {
        <div class="mt-3 mb-3">
            <h3 class="text-uppercase">
                Features
            </h3>
            <p class="fs-5 mt-1 mb-1">
                @Model.Features
            </p>
        </div>
    }
</section>
<script src="~/js/Reviews/details.js"></script>